<h1 class='new-post-title'>New Post</h1>

<%= form_with model: post, url: posts_path, method: :post, local: true, scope: :post do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :text %>
    <%= form.text_area :text, class: "form-control" %>
  </div>

  <%= form.submit "Create Post", class: "btn btn-primary" %>
<% end %>
