<!DOCTYPE html>
<html>
  <head>
    <title>List of Users</title>
  </head>
  <body>
    <% if user_signed_in? %>
      <%= link_to 'Cerrar SesiÃ³n', destroy_user_session_path, method: :delete %>
    <% end %>
    <ul class="user-list">
      <% @users.each do |user| %>
        <li class="user-item">
          <img src="<%= user.photo %>" alt="User Photo" class="user-photo">
          <div class="user-info">
            <a class="user-name label-link" href="<%= user_path(user) %>"><%= user.name %></a>
            <p class="user-posts">Number of Posts: <%= user.posts_counter %></p>
          </div>
        </li>
      <% end %>
    </ul>
  </body>
</html>
