<!DOCTYPE html>
<html>
  <head>
    <title>List of Users</title>
  </head>
  <body>
    <div class='sign_in_user_bar'>
      <% unless user_signed_in? %>
        <div class="user-sign-in-link">
          <%= link_to 'Sign in', new_user_session_path, method: :delete %>
        </div>
      <% end %>
      <% if user_signed_in? %>
        <div class="user-sign-in-link">
          <%= link_to 'Sign out', custom_destroy_user_session_path, method: :delete %>
        </div>
      <% end %>
    </div>
    <ul class="user-list">
      <% @users.each do |user| %>
        <li class="user-item">
          <img src="<%= user.photo %>" alt="User Photo" class="user-photo">
          <div class="user-info">
            <a class="user-name label-link" href="<%= user_path(user) %>"><%= user.name %></a>
            <p class="user-posts">Number of Posts: <%= user.posts_counter %></p>
          </div>
        </li>
      <% end %>
    </ul>
  </body>
</html>
